/* pages/edit/edit.wxss */

.center{
  text-align: center;
}

button {
  width: 200px;
  height: 50px;
  background-color: #38EC80;
  text-align: center;
  margin-top: 5%;
  margin-left: 25%;
  margin-right: 30%;
}

.btn2{
  color: #207137;
  font-weight: bold;
}

.img {
  height: 22px;
  width: 22px;
  left:20px;
  top:50%;
  margin-top:-11px;
  padding-right: 10px;
}

.card {
  box-shadow: 0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03);
  background: white;
  transition: all 0.3s ease;
  height: 70px;
  padding: 0px 30px;
  display: flex;
  align-items: center;
  justify-content: inline-block;
  border: 1px solid #F2F2F2;
  color: #BDBDBD;
}   

.picker{ 
  height:70px;
  background: white;
  border: 1px thin #BDBDBD;
  vertical-align: middle;
  padding: 12px 8px 5px 10px;
  position: relative;
  margin-top: 35px;
}

.card-category {

  top: 10px;
  left: 10px;
  font-size: 10px;
  text-transform: uppercase;
}

.img {
  width: 20px;
  height: 20px;
  margin: 5px auto;
  
  bottom:0%;
  right: 0%;
}