/* pages/user/user.wxss */

.card {
  box-shadow: 0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03);
  background: white;
  transition: all 0.3s ease;
  width: 85%;
  height: 70px;
  padding: 0px 0px 0px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #BDBDBD;
  border-top: 1px solid #828282;
  /* margin-right: 15px; */
  margin-left:15px;

}   

.card-button {
  box-shadow: 0 1px 5px 0 rgba(0,0,0,0.07),0 1px 0 0 rgba(0,0,0,0.03);
  background: #3EFF8B;
  transition: all 0.3s ease;
  height: 80px;
  padding: 0px 30px;
  display: flex;
  align-items: center;
  color: white;
  text-align: center;
}

